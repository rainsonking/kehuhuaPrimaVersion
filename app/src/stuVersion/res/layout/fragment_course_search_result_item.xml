<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:orientation="horizontal"
    android:background="@drawable/class_type_search_result_list"
    >
<LinearLayout
    android:layout_width="74dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:00"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        android:layout_gravity="center"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textColor="@android:color/black"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ban_hao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="班号："
        android:layout_gravity="center"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/class_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20160912"
        android:layout_toEndOf="@+id/ban_hao"
        android:layout_gravity="center"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/type_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周末班"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中文ps-ps4实例与操作"
            android:layout_gravity="center"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/which_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第2次课"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/teacher_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_launcher"/>
            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明老师"
                android:layout_gravity="center"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/school_area_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_launcher"/>
            <TextView
                android:id="@+id/school_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京校区"
                android:layout_gravity="center"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/class_room_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_launcher"/>
            <TextView
                android:id="@+id/class_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海淀011教室"
                android:textColor="@android:color/black"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>


</LinearLayout>