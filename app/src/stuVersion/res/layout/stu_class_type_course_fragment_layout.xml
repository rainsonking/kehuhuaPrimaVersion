<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
   >
    <!--月历形式课表-->
    <LinearLayout
        android:id="@+id/month_course"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.warmtel.expandtab.ExpandPopTabView
            android:id="@+id/expandtab_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tab_toggle_btn_color="@android:color/white"
            app:tab_pop_bg_color="@android:color/white"
            app:tab_toggle_btn_font_color="@color/prim_topBarColor"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@mipmap/ic_record_smiling_face"
                    android:drawablePadding="5dp"
                    android:text="选择上课时间"
                    android:textColor="#333"
                    android:textSize="14sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EDEDED">

                    <TextView
                        android:id="@+id/txt_select_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:textSize="14sp"/>

                    <ImageButton
                        android:id="@+id/img_select_last_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_select_next_month"
                        android:background="?android:actionBarItemBackground"
                        android:padding="10dp"
                        android:src="@mipmap/ic_arrow_left_gray"/>

                    <ImageButton
                        android:id="@+id/img_select_next_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="?android:actionBarItemBackground"
                        android:padding="10dp"
                        android:src="@mipmap/ic_arrow_rigth_gray"/>
                </RelativeLayout>
            </LinearLayout>

            <com.kwsoft.kehuhua.widget.WeekView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/weekView" />

            <com.kwsoft.kehuhua.widget.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

